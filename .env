# .env file (Environment Variables สำหรับ Docker Compose)

# --- 0. DOMAIN CONFIG ---
DOMAIN_NAME=localhost # สำหรับ Dev: ใช้ 'localhost'. สำหรับ Prod: ใช้ 'mydomain.com'

# --- 1. CORE DB SECRETS & CONFIG (Prefect, MLflow, Plane) ---
DB_USER=dbadmin
DB_PASSWORD=my_secure_db_password_dev
DB_PLANE=plane_db

# --- 2. PLANE SECRETS & CONFIG (Full Set) ---
PLANE_SECRET_KEY=a_very_long_and_random_string_for_plane_security

# MQ SECRETS (RabbitMQ)
MQ_USER=plane
MQ_PASSWORD=plane_mq_password_dev
MQ_VHOST=plane

# S3 / MINIO SECRETS
MINIO_ROOT_USER=minioaccesskey
MINIO_ROOT_PASSWORD=miniosecretkey123
AWS_S3_BUCKET_NAME=uploads
AWS_S3_ENDPOINT_URL=http://minio:9000
USE_MINIO=1

# PLANE CORE URLS
# ปรับ WEB_URL ให้ใช้ DOMAIN_NAME
WEB_URL=http://plane.${DOMAIN_NAME}
API_BASE_URL=http://plane-api:8000
REDIS_HOST=redis
AMQP_URL=amqp://${MQ_USER}:${MQ_PASSWORD}@plane-mq:5672/${MQ_VHOST}

# --- DEDICATED PREFECT DB SECRETS ---
DB_PREFECT_USER=prefect_app_user
DB_PREFECT_PASSWORD=1234567890
DB_PREFECT_NAME=prefect_db